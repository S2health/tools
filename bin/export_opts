#!/bin/bash
#
# model command to be executed in root directory containing S2 Health cloned repos.
#

USAGE="USAGE: `basename $0` <repo-name>"

if [ $# -ne 1 ]; then
	echo $USAGE
	exit 1
fi

lib_id=$1
if [ ! -d $lib_id ]; then
	echo "Repo $lib_id doesn't exist"
	exit 1
fi

log_dir=$lib_id/logs
log_file=$log_dir/`basename $0`.log

# just in case the logs directory doesn't yet exist
mkdir -p $log_dir
if [ $? -ne 0 ] || [ ! -w $log_dir ]; then
	echo "Logs dir $log_dir doesn't exist or not writable"
	exit 1
fi

rm -f $lib_id/opts/*.*
echo "adlc --cfg tools/cfg/adlc.cfg -b $lib_id --export --flat -f adl --opts --rm_multiplicities -o $lib_id/opts"  > $log_file
adlc --cfg tools/cfg/adlc.cfg -b $lib_id --export --flat -f adl --opts --rm_multiplicities -o $lib_id/opts >> $log_file 2>&1
