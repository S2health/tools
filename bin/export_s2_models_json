#!/bin/bash
#
# model command to be executed in the directory containing cloned repos
#

lib_id=S2-models-demo
out_repo=S2-exported
log_dir=$out_repo/$lib_id/logs
log_file=$log_dir/`basename $0`.log

# create log dir if it does not exist
mkdir -p $log_dir
if [ $? -ne 0 ] || [ ! -w $log_dir ]; then
	echo "Logs dir $log_dir doesn't exist or not writable"
	exit 1
fi

# main command
echo "adlc --cfg tools/cfg/adlc.cfg -b $lib_id --export --flat -f json -o $out_repo/$lib_id/json/flat" > $log_file
adlc --cfg tools/cfg/adlc.cfg -b $lib_id --export --flat -f json -o $out_repo/$lib_id/json/flat >> $log_file 2>&1

echo >> $log_file
echo "adlc --cfg tools/cfg/adlc.cfg -b $lib_id --export --opts --flat -f json -o S$out_repo/$lib_id/json/flat" >> $log_file
adlc --cfg tools/cfg/adlc.cfg -b $lib_id --export --opts --flat -f json -o $out_repo/$lib_id/json/flat >> $log_file 2>&1
